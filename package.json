{
  "name": "@betterlb/ui",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared UI component library for BetterLB portals",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/tokens.css",
    "./dist/styles/tokens.css": "./dist/styles/tokens.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write src"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.22.0",
    "react-i18next": "^15.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-tabs": "^1.0.4",
    "lucide-react": "^0.470.0",
    "@icons-pack/react-simple-icons": "^13.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.9.0",
    "tsup": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "municipal",
    "philippines"
  ],
  "author": "BetterLB",
  "license": "MIT"
}
